#include <stdio.h>

void count_total_digits();

int main()
{
    count_total_digits();
    return 0;
}

void count_total_digits()
{
    int num, count = 0;

    printf("Enter a number: ");
    scanf("%d", &num);

    while(num != 0)
    {
        num = num / 10;
        printf("%d\n",num);
        count++;
    }

    printf("Total digits = %d", count);
}
