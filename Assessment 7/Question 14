#include <stdio.h>

void disp_sum_all_digits(int num,int digit,int sum);

int main() 
{
    int num, digit, sum = 0;
    printf("Enter a number: ");
    scanf("%d", &num); 
    disp_sum_all_digits(num,sum,digit);
    return 0;
}

void disp_sum_all_digits(int num,int digit,int sum) 
{
    

    while(num != 0)
    {
        digit = num % 10;
        printf("%d\n", digit);
        sum += digit;
        num = num / 10;
    }

    printf("\n%d", sum);
}
